{
  "openapi": "3.0.0",
  "info": {
    "title": "API de produtos",
    "description": "API para gerenciamento de produtos",
    "version": "1.0.0"
 },
 "paths": {
  "/products": {
    "post": {
      "tags": ["products"],
      "summary": "Create a new product",
      "description": "Create a new product",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name_product": {
                  "type": "string"
                },
                "purchase_price": {
                  "type": "number"
                },
                "sale_price": {
                  "type": "number"
                },
                "amount": {
                  "type": "number"
                }
              },
              "example": {
                "name_product": "Product Name Example",
                "purchase_price": 10,
                "sale_price": 20,
                "amount": 30
              }
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Produto cadastrado com sucesso!",
          "content": {
            "application;json":  {
              "schema": {
                "$ref": "#/components/Product"
              }
            }
          }
        },
        "400": {
          "description": "Produto j√° cadastrado!"
        }
      }
    },
    "get": {
      "tags": ["products"],
      "summary": "List all products",
      "description": "List all products",
      "responses": {
        "200": {
          "description": "Sucess",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/Product"
              }
            }
          }
        }
      }
    }
  }
 },
 "components": {
  "Product": {
    "type": "object",
    "properties": {
      "name_product": {
        "type": "string"
      },
      "purchase_price": {
        "type": "number"
      },
      "sale_price": {
        "type": "number"
      },
      "amount": {
        "type": "number"
      }
    }
  }
 }
}